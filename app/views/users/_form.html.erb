
  <%= form_for @user do |f| %>
      <% if @user.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@user.errors.count, "error") %>
              prohibited this user from being saved:</h2>
            <ul>
              <% @user.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
      <% end %>
      <fieldset style="border-color: #97240a;">
        <div class="field">
          <%= f.label :name, 'Логин:' %>
          <%= f.text_field :name, size: 40, class: 'edit_input' %>
        </div>
        <div class="field">
          <%= f.label :password, 'Пароль:' %>
          <%= f.password_field :password, size: 40, class: 'edit_input' %>
        </div>
        <div class="field">
          <%= f.label :password_confirmation, 'Подтвердите пароль:' %>
          <%= f.password_field :password_confirmation, size: 40, class: 'edit_input' %>
        </div>
        <div class="field">
          <%= submit_tag "Сохранить", class: 'edit_button' %>
        </div>
      </fieldset>
  <% end %>